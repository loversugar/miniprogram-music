.musiclist-container {
    display: flex;
    padding: 14rpx 20rpx;
    align-items: center;
}

.musiclist-index {
    flex-grow: 1;
    color: #888;
    font-size: 34rpx;
    width: 80rpx,
}

.musiclist-info {
    flex-grow: 9;
    /* 这里设置width为0 */
    width: 0rpx;
}

.musiclist-name {
    font-size: 34rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 10rpx;
}

.music-alia {
    color: #888;
}

.musiclist-singer {
    font-size: 24rpx;
    color: #888;
}

.playing view, .playing text{
    color: #d43c33;
}